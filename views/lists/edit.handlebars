{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<div class="card card-body">
  <h3>Edit list</h3>
  <form action="/lists/{{list.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">lists Name</label>
      <input class="form-control" name="title" type="text" value="{{list.title}}">
    </div>
    <div class="form-group">
      <label for="status">Status</label>
      <input class="form-control" name="status" type="text" value="{{list.status}}">
    </div>
    <div class="form-group">
      <label for="ingredients">Ingredients</label>
      <input class="form-control" name="ingredients" type="text" value="{{list.ingredients}}">
    </div>
    <button type="submit" class="btn btn-dark">Update lists</button>
    <a href="/lists" class="btn btn-dark">Cancel</a>
  </form>
</div>